<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:cardBackgroundColor="#F8F9FA"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <!-- Info User -->
            <RelativeLayout
                android:id="@+id/infoUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/approveuser"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/nama_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/intersemibold"
                    android:text="Anto Sutomo"
                    android:textColor="@color/primary_dark"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/email_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_user"
                    android:fontFamily="@font/intermedium"
                    android:text="anto@mail.com"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></TextView>

            </RelativeLayout>

            <Button
                android:id="@+id/approveuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:textColor="@color/white"
                android:background="@drawable/button_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            </Button>

            <!-- Image Profile -->
            <!--<ImageView
                android:id="@+id/approvebtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/approveicon">
            </ImageView>-->


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>