                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:src="@drawable/taskdetailnew">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Complete Task : "
                                        android:textColor="@color/text_color"
                                        android:textSize="16dp"></TextView>

                                    <TextView
                                        android:id="@+id/totaltask_project"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="6/10"
                                        android:textColor="@color/text_color"
                                        android:textSize="16dp"></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:src="@drawable/member">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Member : "
                                        android:textColor="@color/text_color"
                                        android:textSize="16dp"></TextView>

                                    <TextView
                                        android:id="@+id/totalmember_project"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:textColor="@color/text_color"
                                        android:textSize="16dp"></TextView>

                                </LinearLayout>

                            </LinearLayout>

                            <!--Detail Date-->

                            <LinearLayout
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="15dp">

                                <TextView
                                    android:id="@+id/date_finishdate_project"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/intermedium"
                                    android:text="16/04/22"
                                    android:textColor="@color/text_color"
                                    android:textSize="12dp"></TextView>

