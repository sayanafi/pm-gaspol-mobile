<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".SuperUser.CreateTeam_SU">

    <!-- Heading -->
    <RelativeLayout
        android:id="@+id/headingTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        tools:ignore="MissingConstraints">

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/imgclose_create"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/closeicon"
            android:onClick="closeBtn"></ImageView>

        <!-- Title Page -->
        <TextView
            android:layout_below="@+id/imgclose_create"
            android:id="@+id/titlePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:text="Create New Team"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <!-- Desc Page -->
        <TextView
            android:id="@+id/descTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlePage"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/interregular"
            android:text="Create your awesome superteam ðŸ”¥"
            android:textColor="@color/white"
            android:textSize="14dp" />



    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:paddingTop="50dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:background="@drawable/card_create">


        <EditText
            android:id="@+id/editEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/field_create"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/form" />

        <EditText
            android:id="@+id/editPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_create"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/form" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>