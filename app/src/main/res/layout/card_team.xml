<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Title Team -->
            <TextView
                android:id="@+id/nama_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/intersemibold"
                android:text="Dewabiz"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_dark"
                android:textSize="18dp"></TextView>

            <!-- Image Team -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:background="@drawable/frame_imgteam">

                <ImageView
                    android:id="@+id/logoTeam"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:src="@drawable/dewabiz">

                </ImageView>

            </RelativeLayout>

            <!-- Total Project -->
            <LinearLayout
                android:id="@+id/totalproject_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/title_team"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/taskdetailnew">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Project : "
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></TextView>

                <!-- Label Total Project -->
                <TextView
                    android:id="@+id/totalproject_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></TextView>

            </LinearLayout>

            <!-- Total Member -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@id/totalproject_row"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/member">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Member : "
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></TextView>

                <!-- Label Total Member -->
                <TextView
                    android:id="@+id/totalmember_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></TextView>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>